<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlib.entity">
	<class name="UserType" table="tb_usertype">
		<id name="ut_id">
			<generator class="native" />
		</id>
		<property name="ut_name" length="50" />
		<property name="ut_baseNum" length="50" />
		<property name="ut_ableUse" length="50" />
		<!-- 多个用户角色属于一个用户与用户角色中间表 -->
		<many-to-one name="userGroup_UserType" column="ug_ut_id"/>
		<!-- 多个用户角色属于一个角色与权限中间表 -->
		<many-to-one name="userType_Authority" column="ut_a_id"/>
		<!-- 多个角色属于一个用户与用户类型中间表 -->
		<many-to-one name="user_userType" column="u_ut_id"/>
	</class>
</hibernate-mapping>

