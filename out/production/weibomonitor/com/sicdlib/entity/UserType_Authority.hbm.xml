<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlib.entity">
	<class name="UserType_Authority" table="tb_usertype_authority">
		<id name="ut_a_id">
			<generator class="native" />
		</id>
		
		<!-- 一个用户角色与权限中间表 包含多个 用户角色 -->
		<set name="userTypes" cascade="all" inverse="true">
			<key column="ut_a_id"/>
			<one-to-many class="UserType"/>
		</set>
		
		<!-- 一个用户角色与权限中间表 包含多个 权限 -->
		<set name="authorities" cascade="all" inverse="true">
			<key column="ut_a_id"/>
			<one-to-many class="Authority"/>
		</set>
		
	</class>
</hibernate-mapping>

