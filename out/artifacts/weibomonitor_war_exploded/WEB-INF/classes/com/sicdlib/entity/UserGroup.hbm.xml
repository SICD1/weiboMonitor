<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlib.entity">
	<class name="UserGroup" table="tb_usergroup">
		<id name="ug_id">
			<generator class="native" />
		</id>
		<property name="ug_name" length="50" />
		<property name="ug_parentName" length="50" />
		<!-- 多对一：用户组属于一个用户与用户组中间表 -->		
		<many-to-one name="user_userGroup" column="u_ug_id"/>
		<!-- 多对一：用户组属于一个用户组与用户角色中间表 -->
		<many-to-one name="userGroup_UserType" column="ug_ut_id"/>
		
	</class>
</hibernate-mapping>

