<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlib.entity">
	<class name="User_userGroup" table="tb_user_usergroup">
		<id name="g_id" type="java.lang.String" column="g_id">
			<generator class="uuid"/>
		</id>

		<property name="g_name" length="100" />
		<!--多个组属于一个类-->
		<many-to-one name="user_userGroup" column="g_parent_id"/>
		<!-- 一个组包含多个用户 -->
		<set name="users" cascade="all" inverse="true">
			<key column="g_id"/>
			<one-to-many class="User"/>
		</set>
		<many-to-one name="role" column="r_id"/>
		<!--&lt;!&ndash; 一个用户与用户组中间表包含多个用户组 &ndash;&gt;
		<set name="userGroups" cascade="all" inverse="true">
			<key column="u_ug_id"/>
			<one-to-many class="UserGroup"/>
		</set>-->
	</class>
</hibernate-mapping>

