<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlib.entity">
	<class name="WbUser" table="tb_wbuser">
		<id name="wbu_id">
			<generator class="native" />
		</id>
		<property name="wbu_name" length="50" />
		<property name="wbu_VType" length="10" />
		<property name="wbu_portrait" length="256" />
		<property name="wbu_sex" type="boolean" />
		<property name="wbu_addr" length="100" />
		<property name="wbu_brithday" length="50" />
		<property name="wbu_regTime" length="50" />
		<property name="wbu_des" length="256" />
		<property name="wbu_homePageLink" length="256" />
		<property name="wbu_concernNum" type="integer" length="11" />
		<property name="wbu_fansNum" type="integer" length="11" />
		<property name="wbu_weiboNum" type="integer" length="11" />
		<set name="weibos" cascade="all" inverse="true">
			<key column="wbu_id"/>
			<one-to-many class="Weibo"/>
		</set>
	</class>
</hibernate-mapping>

