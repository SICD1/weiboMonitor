<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlib.entity">
	<class name="KeyWords" table="tb_keywords">
		<id name="kw_id">
			<generator class="native" />
		</id>
		<property name="kw_name" length="50" />
		<property name="kw_hotDegree" type="integer" length="11" />
		<property name="kw_province" length="50" />
		<property name="kw_Date" length="50" />
		<set name="weibos" cascade="all" inverse="true" lazy="true">
			<key column="kw_id"/>
			<one-to-many class="Weibo"/>
		</set>
	</class>
</hibernate-mapping>

