<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlib.entity">
	<class name="User_userGroup" table="tb_user_usergroup">
		<id name="u_ug_id">
			<generator class="native" />
		</id>
		
		<!-- 一个用户与用户组中间表包含多个用户 -->
		<set name="users" cascade="all" inverse="true">
			<key column="u_ug_id"/>
			<one-to-many class="User"/>
		</set>
		
		<!-- 一个用户与用户组中间表包含多个用户组 -->
		<set name="userGroups" cascade="all" inverse="true">
			<key column="u_ug_id"/>
			<one-to-many class="UserGroup"/>
		</set>
	</class>
</hibernate-mapping>

