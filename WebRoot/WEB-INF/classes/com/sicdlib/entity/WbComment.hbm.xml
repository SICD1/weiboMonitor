<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlib.entity">
	<class name="WbComment" table="tb_wbcomment">
		<id name="wbc_id">
			<generator class="native" />
		</id>
		<property name="wbc_u_id" length="50" />
		<property name="wbc_zanNum" length="50" />
		<property name="wbc_createdAt" length="1024" />
		<property name="wbc_content" length="1024" />
		<!-- 一条评论属于一条微博 -->
		<many-to-one name="weibo" column="wb_id"/>
	</class>
</hibernate-mapping>

