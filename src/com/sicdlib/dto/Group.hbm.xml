<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlib.dto">
	<class name="Group" table="tb_group">
		<id name="g_id" type="java.lang.String" column="g_id">
			<generator class="uuid"/>
		</id>
		<property name="g_name" type="java.lang.String" column="g_name"/>

		<!-- 一个组包含多个用户 -->
		<set name="users" cascade="all" >
			<key column="group_id"/>
			<one-to-many class="User"/>
		</set>

		<many-to-one name="role" column="role_id" class="Role" cascade="save-update" fetch="select"/>

		<!--自身双向关联-->
		<set name="childGroup">
			<key>
				<column name="g_parent_id" />
			</key>
			<one-to-many class="Group" />
		</set>
		<many-to-one name="parentGroup" column="g_parent_id" class="Group" fetch="select" cascade="all"/>
	</class>
</hibernate-mapping>

