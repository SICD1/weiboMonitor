<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlib.dto">
	<class name="Group" table="tb_group">
		<id name="g_id" type="java.lang.String" column="g_id">
			<generator class="uuid"/>
		</id>
		<property name="g_name" length="100" />
		<!--多个组属于一个父类-->
		<many-to-one name="groupParentId" column="g_parent_id"/>
		<!-- 一个组包含多个用户 -->
		<set name="users" cascade="all" inverse="true">
			<key column="g_id"/>
			<one-to-many class="User"/>
		</set>
		<many-to-one name="role" column="r_id"/>

		<!--&lt;!&ndash; 多个用户属于一个用户组 &ndash;&gt;-->
		<!--<many-to-one name="user_userGroup" column="u_ug_id"/>-->
		<!--&lt;!&ndash; 多个组属于一个角色 &ndash;&gt;-->
		<many-to-one name="g_id" column="r_id"/>
	</class>
</hibernate-mapping>

