<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlib.dto">
	<class name="Group" table="tb_group">
		<id name="g_id" type="java.lang.String" column="g_id">
			<generator class="uuid"/>
		</id>
		<property name="g_name" type="java.lang.String" column="g_name"/>
		<!--多个组属于一个父类-->
		<property name="parentId" type="java.lang.String" column="g_parent_id" />
		<!-- 一个组包含多个用户 -->
		<set name="users" cascade="all" inverse="true">
			<key column="u_id"/>
			<one-to-many class="User"/>
		</set>
		<many-to-one name="role" column="r_id" lazy="proxy" cascade="save-update" fetch="join"/>
	</class>
</hibernate-mapping>

