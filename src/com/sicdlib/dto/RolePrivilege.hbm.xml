<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlib.dto">
	<class name="RolePrivilege" table="tb_role_privilege">
		<id name="rp_id" type="java.lang.String" column="rp_id">
			<generator class="uuid"/>
		</id>

		<many-to-one name="role" column="role_id" class="Role" cascade="all" fetch="select"/>
		<many-to-one name="privilege" class="Privilege" cascade="all" fetch="select"/>
	</class>
</hibernate-mapping>

