<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlib.dto">
	<class name="Corpus_Essays" table="tb_corpus_essays">
		<id name="ce_id" type="java.lang.Integer" column="ce_id">
			<generator class="uuid"/>
		</id>
		<property name="ce_title"   type="java.lang.String"  column="ce_title" />
		<property name="ce_content"   type="java.lang.String"  column="ce_content" />
	</class>
</hibernate-mapping>

