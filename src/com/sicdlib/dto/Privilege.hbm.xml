<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlib.dto">
	<class name="Privilege" table="tb_privilege">
		<id name="p_id" type="java.lang.String" column="p_id">
			<generator class="uuid"/>
		</id>
		<property name="p_type" column="p_type" type="java.lang.String"/>

		<set name="rolePrivileges">
			<key>
				<column name="p_id"/>
			</key>
			<one-to-many class="RolePrivilege" />
		</set>

		<many-to-one name="privilegeMenu" class="PrivilegeMenu" cascade="all" fetch="select" unique="true" />
	</class>
</hibernate-mapping>

