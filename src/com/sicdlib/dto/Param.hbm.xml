<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlib.dto">
    <class name="Param" table="param">
        <id name="id" type="java.lang.String" column="PARAM_ID">
            <generator class="uuid"/>
        </id>
        <property name="value" column="PARAM_VALUE" type="java.lang.String" />
        <property name="name" column="PARAM_NAME" type="java.lang.String" />
        <property name="desc" column="PARAM_DESC" type="java.lang.String" />

        <many-to-one name="type_id" column="PARAM_TYPE_ID" class="ParamType"/>
    </class>
</hibernate-mapping>