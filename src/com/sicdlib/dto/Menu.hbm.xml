<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlib.dto">
	<class name="Menu" table="tb_menu">
		<id name="m_id" column="m_id">
			<generator class="uuid"/>
		</id>
		<property name="m_name" length="100" />
		<property name="m_icon" length="1000" />
		<property name="m_url" length="1000" />

		<many-to-one name="menu" column="parent_id"/>
	</class>
</hibernate-mapping>

