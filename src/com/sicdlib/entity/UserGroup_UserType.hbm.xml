<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.sicdlib.entity">
	<class name="UserGroup_UserType" table="tb_usergroup_usertype">
		<id name="ug_ut_id">
			<generator class="native" />
		</id>
		
		<!-- 一个用户组与用户角色中间表 包含多个 用户角色 -->
		<set name="usertypes" cascade="all" inverse="true">
			<key column="ug_ut_id"/>
			<one-to-many class="UserType"/>
		</set>
		
		<!-- 一个用户组与用户角色组中间表 包含多个 用户组 -->
		<set name="userGroups" cascade="all" inverse="true">
			<key column="ug_ut_id"/>
			<one-to-many class="UserGroup"/>
		</set>
		
	</class>
</hibernate-mapping>

